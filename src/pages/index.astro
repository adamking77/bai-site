            let delay = 0;
            
            if (animationName === 'hero') {
              // Hero: Dramatic scale up from center
              target.style.transform = 'scale(0.8) translateY(20px)';
              target.style.opacity = '0';
              setTimeout(() => {
                target.style.transform = 'scale(1) translateY(0px)';
                target.style.opacity = '1';
              }, 300);
              
            } else if (animationName === 'timeline') {
              // Timeline: Simple fade up with slight delay
              setTimeout(() => {
                target.style.opacity = '1';
                target.style.transform = 'translateY(0px)';
              }, 200);
              
            } else {
              // Progressive delays for item animations
              if (animationName.includes('autonomy-item-')) {
                const itemNumber = parseInt(animationName.split('-').pop());
                delay = 100 + (itemNumber * 100);
              } else if (animationName.includes('pattern-item-')) {
                const itemNumber = parseInt(animationName.split('-').pop());
                delay = 200 + (itemNumber * 150);
              } else if (animationName.includes('genzen-track-record')) {
                delay = 100;
              } else if (animationName.includes('genzen-business-owners')) {
                delay = 300;
              } else if (animationName.includes('right') || animationName.includes('framework') || animationName.includes('autonomy-right') || animationName.includes('inversion-right') || animationName.includes('genzen-right')) {
                delay = 200;
              } else if (animationName.includes('callout') || animationName.includes('promise') || animationName.includes('inversion-callout')) {
                delay = 400;
              } else if (animationName.includes('button') || animationName.includes('pattern-steps')) {
                delay = 600;
              }
              
              setTimeout(() => {
                target.style.opacity = '1';
                target.style.transform = 'translateY(0px)';
              }, delay);
            }
            
            observer.unobserve(target);
          }
        });
      }, observerOptions);

        observer.observe(element);
      });
    }, 100); // Small delay to ensure everything is loaded
  });

  // Also try on astro:page-load in case DOMContentLoaded doesn't work
  document.addEventListener('astro:page-load', () => {
    console.log('Astro page load triggered');
    // Trigger the same logic
    document.dispatchEvent(new Event('DOMContentLoaded'));
  });
